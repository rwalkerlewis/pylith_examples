# ----------------------------------------------------------------------
# Generate geometry
# ----------------------------------------------------------------------
#playback 'geometry.jou'

# ----------------------------------------------------------------------
# Create surface using vertices
# ----------------------------------------------------------------------

# Block is 10m in radius
reset
create sphere radius 10


# ----------------------------------------------------------------------
# Set discretization size
# ----------------------------------------------------------------------
volume all size 0.5

# ----------------------------------------------------------------------
# Generate the mesh
# ----------------------------------------------------------------------
volume all scheme map
mesh volume all

# ----------------------------------------------------------------------
# Export exodus file
# ----------------------------------------------------------------------
export mesh "mesh_hex.exo" dimension 3 overwrite




